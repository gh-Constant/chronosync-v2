{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node --watch --env-file=../../.env dist/index.js",
    "build": "esbuild src/index.ts --bundle --platform=node --target=node20 --format=esm --outfile=dist/index.js",
    "build:watch": "esbuild src/index.ts --bundle --platform=node --target=node20 --format=esm --outfile=dist/index.js --watch",
    "start": "node --env-file=../../.env dist/index.js"
  },
  "dependencies": {
    "@prisma/client": "^5.17.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.11",
    "esbuild": "^0.23.0",
    "prisma": "^5.17.0",
    "typescript": "^5.5.3"
  }
}